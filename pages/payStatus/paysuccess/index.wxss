    padding:180rpx 40rpx 40rpx;
    box-sizing: border-box;
}
.paysuccess-icon{
    width: 150rpx;
    height: 150rpx;
    text-align: center;
    display: block;
    margin: 0 auto;
}
.paysuccessTxt{
    margin-top: 40rpx;
    text-align: center;
    font-size: 36rpx;
    margin-bottom: 20rpx;
}
.paysuccesstis{
font-size: 24rpx;
color:#bfbfbf;
text-align: center;
}
.paysuccessBtn{
