/* pages/shopFilter/index.wxss */
.shopFilterTop {
    width: 100%;
    position: relative;
}

.shopFilterTopImg {
    width: 100%;
}

.shopFilterTopInfor {
    width: 94%;
    height: 400rpx;
    padding: 20rpx;
    border-radius: 10rpx;
    background: #fff;
    box-sizing: border-box;
    z-index: 100;
    position: absolute;
    left: 3%;
    bottom: -250rpx;
}

.shopFilterTopInforItemList {
    width: 25%;
    margin-bottom: 30rpx;
}

.shopFilterTopInforItemListImg {
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
    text-align: center;
    margin: 0 auto 10rpx;
}

.shopFilterTopInforItemListImg image {
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
    display: block;
    margin: 0 auto;
}

.shopFilterTopInforItemListName {
    font-size: 24rpx;
    color: #bfbfbf;
    text-align: center;
}

.shopFilterTopInfor .wx-swiper-dots.wx-swiper-dots-horizontal {
    margin-bottom: 2rpx;
}

.shopFilterTopInfor .wx-swiper-dot {
    width: 30rpx;
    display: inline-flex;
    height: 8rpx;
    margin-left: 10rpx;
    justify-content: space-between;
    border-radius: 5rpx
}

.shopFilterTopInfor .wx-swiper-dot::before {
    content: '';
    flex-grow: 1;
    background: rgba(255, 255, 255, 0.8);
    border-radius: 5rpx
}

.shopFilterTopInfor .wx-swiper-dot-active::before {
    background: #bfbfbf;
}

