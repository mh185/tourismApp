/* pages/more/deliciousFood/index.wxss */
page {
  min-height: 100vh;
  background: url("http://47.108.86.202:8081/icon/bj01.png") no-repeat;
  background-size: 100%;
  background-position-y: -47rpx;
}
.nav_left{
  font-size: 40rpx;
  color: #000000;
  font-weight: 500;
  font-family: Source Han Serif CN;

}
.nav_left .nav_left_text{
  margin-left:24rpx;
}
.attractions {
  /* margin-top: 14rpx; */
  background: #fff;
}
.head {
  display: flex;
  padding: 0 30rpx;
  align-items: center;
}
.active{
  display: inline-block;
  position: absolute;
  width: 28rpx;
  height: 4rpx;
  left: 50%;
  transform: translateX(-50%);
  bottom: -6rpx;
  background: linear-gradient(180deg,#f0d78d, #e1cc8f);
  border-radius: 2rpx;
}
.first {
  white-space: nowrap;
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  position: relative;
  /* border-bottom: 1px solid; */
}

.scroll_tab {
  display: flex;
  align-items: center;
  vertical-align: top;
  padding-left: 26rpx;
  overflow: scroll;
  height: 60rpx;
}
.scroll_tab view {
  position: relative;
  margin: 0 26rpx;
  white-space: nowrap;
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  display: inline-block;
}
.active_color{
  color: #552f09;
}
.content{
  padding: 30rpx;
  /* margin-top: 40rpx; */
}
.one {
  margin-bottom: 40rpx;
}
.one image {
  width: 100%;
  height: 240rpx;
  border-radius: 8rpx;
}
.title {
  font-size: 26rpx;
  font-family: Source Han Serif CN, Source Han Serif CN-Medium;
  font-weight: 500;
  color: #1d1d1d;
  margin-top: 16rpx;
}
.loading{  
  padding: 10rpx;  
  font-size: 26rpx;
  color:#666;
  text-align: center;  
  margin-top: 30rpx;
}