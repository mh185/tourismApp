/* pages/more/tourGuide/index.wxss */
page {
  min-height: 100vh;
  background: url("http://47.108.86.202:8081/icon/bj01.png") no-repeat;
  background-size: 100%;
  background-position-y: -47rpx;
}
.nav_left{
  font-size: 40rpx;
  color: #000000;
  font-weight: 500;
  font-family: Source Han Serif CN;

}
.nav_left .nav_left_text{
  margin-left:24rpx;
}
.resuilt_list_scroll{
  height: 800rpx;
  overflow: scroll;
}
.resuilt_list{
  padding: 40rpx 40rpx 0;
}
.screening{
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  background: #fff;
  padding: 10rpx 50rpx;
}
.screening_right{
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
}
.screening_box{
  display: flex;
  margin: 10rpx 0;
}
.options{
  font-size: 22rpx;
  font-weight: 500;
  color: #333333;
  height: 40rpx;
  /* width: 70rpx; */
  padding: 0 20rpx;
  line-height: 40rpx;
  text-align: center;
  margin-left: 20rpx;
}
.action{
  background: #e1cc8f;
  border-radius: 15rpx;
}
.list_item{
  /* height: 260rpx; */
  padding: 30rpx 0;
  background: #fff;
  position: relative;
  border-radius: 8rpx;
  box-shadow: 0px 10rpx 20rpx 0px rgba(130,130,130,0.16); 
}
.item_right_border{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.item_right_border image {
  width: 8rpx;
  height: 206rpx;
}
.border_right {
  margin-left: 60rpx;
}
.list_item_line text{
  display: inline-block;
  line-height: 40rpx;
}
.left{
  width: 140rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #646464;
}
.right{
  font-size: 32rpx;
  font-weight: 500;
  text-align: left;
  color: #c8c8c8;
}
.food{
  position: absolute;
  bottom: 50rpx;
  width: 100%;
}
.food_button{
  background: linear-gradient(180deg,#f0d78d, #e1cc8f);
  box-shadow: 0px -10px 20px 0px rgba(184,184,184,0.1); 
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  border-radius: 50rpx;
  margin: 20px auto;
}
.popup_box{
  width: 70%;
  position: relative;
  height: 440rpx;
  padding: 40rpx;
}
/* .showPopup{ */
  /* width: 70%; */
  /* position: relative; */
/* } */
.pop_head{
  border-left: 4rpx solid #f0d78d;
  padding-left: 30rpx;
  font-size: 28rpx;
  font-weight: 800;
  color: #1d1d1d;
  height: 30rpx
}
.pop_content{
  font-size: 24rpx;
  font-weight: 500;
  color: #1d1d1d;
  line-height: 20px;
  letter-spacing: 0px;
  padding-top: 40rpx;
}
.bottom_box {
  position: absolute;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
}
.bottom {
  display: flex;
}
.bottom_left {
  width: 150rpx;
  height: 60rpx;
  background: linear-gradient(180deg,#ff8080, #ff6969);
  border-radius: 40rpx 0px 0px 40rpx;
  box-shadow: 0px -20rpx 40rpx 0px rgba(184,184,184,0.1); 
}
.bottom_right {
  width: 150rpx;
  height: 60rpx;
  background: linear-gradient(180deg,#f0d78d, #e1cc8f);
  border-radius: 0px 40rpx 40rpx 0px;
  box-shadow: 0px -20rpx 40rpx 0px rgba(184,184,184,0.1); 
}
.bottom_title {
  font-size: 28rpx;
  font-family: Source Han Serif CN, Source Han Serif CN-Medium;
  font-weight: 500;
  text-align: center;
  color: #ffffff;
  line-height: 60rpx;
}
.loading{  
  padding: 10rpx;  
  font-size: 26rpx;
  color:#666;
  text-align: center;  
  margin-top: 30rpx;
}