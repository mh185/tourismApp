/* pages/more/scenicSpotHeat/index.wxss */
Page {
  /* background: #fff; */
  background-size: 100%;
  /* background: linear-gradient(to bottom,rgba(255,195,33,0.46), rgba(255,243,150,0)); */
}
.nav_left{
  font-size: 40rpx;
  color: #000000;
  font-weight: 500;
  font-family: Source Han Serif CN;

}
.nav_left .nav_left_text{
  margin-left:24rpx;
}
.screening{
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  background: #fff;
  padding: 10rpx 50rpx;
}
.screening_right{
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
}
.screening_box{
  display: flex;
  align-items: center;
  margin: 10rpx 0;
}
.options{
  border-radius: 16rpx;
  width: 68rpx;
  font-size: 18rpx;
  font-weight: 500;
  color: #333333;
  height: 30rpx;
  /* width: 70rpx; */
  padding: 0 20rpx;
  line-height: 30rpx;
  text-align: center;
  margin-left: 20rpx;
}
.action{
  /* opacity: 0.2; */
  background: linear-gradient(180deg,#f0d78d, #e1cc8f);
  border-radius: 16rpx;
  height: auto !important;
  /* width: auto !important; */
}
.one {
  margin-top: 68rpx;
  font-size: 26rpx;
  color: #9d9d9d;
}
.two {
  margin-top: 26rpx;
  display: flex;
  justify-content: space-between;
}
.two_left {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #373736;
  margin-right: 140rpx;
}
.two_left image {
  width: 22rpx;
  height: 28rpx;
  margin-right: 6rpx;
  margin-left: 6rpx;
}
.two_right {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #e7d08e;
}
.two_right image {
  width: 26rpx;
  height: 26rpx;
  margin-right: 6rpx;
}
.three {
  margin-top: 68rpx;
  display: flex;
  flex-wrap: wrap;
}
.city {
  width: 116rpx;
  height: 44rpx;
  text-align: center;
  line-height: 44rpx;
  font-size: 28rpx;
  color: #313131;
  margin-bottom: 50rpx;
}
/* .wxif {
  position: relative;
} */
.bottom_box {
  /* position: absolute; */
  /* bottom: 10rpx; */
  margin: 60rpx 0 20rpx 0;
  width: 100%;
  display: flex;
  justify-content: center;
  /* left: 50%; */
  /* transform: translateX(-50%); */
}
.bottom {
  display: flex;
}
.bottom_left {
  width: 280rpx;
  height: 80rpx;
  background: linear-gradient(180deg,#ff8080, #ff6969);
  border-radius: 40rpx 0px 0px 40rpx;
  box-shadow: 0px -20rpx 40rpx 0px rgba(184,184,184,0.1); 
}
.bottom_right {
  width: 280rpx;
  height: 80rpx;
  background: linear-gradient(180deg,#f0d78d, #e1cc8f);
  border-radius: 0px 40rpx 40rpx 0px;
  box-shadow: 0px -20rpx 40rpx 0px rgba(184,184,184,0.1); 
}
.bottom_title {
  font-size: 28rpx;
  font-family: Source Han Serif CN, Source Han Serif CN-Medium;
  font-weight: 500;
  text-align: center;
  color: #ffffff;
  line-height: 80rpx;
}
.content{
  background: linear-gradient(to bottom,rgba(255,195,33,0.46), rgba(255,243,150,0));
  padding: 32rpx 30rpx 0 30rpx;
}
.list_item {
  margin-bottom: 40rpx;
}
.list_item_img{
  width: 100%;
  height: 260rpx;
  border-radius: 8rpx;
}
.list_item_text{
  display: flex;
  justify-content: space-between;
  margin-top: 2rpx;
}
.name{
  font-size: 26rpx;
  font-weight: 500;
  color: #1d1d1d;
}
.person_number{
  font-size: 28rpx;
  font-weight: 500;
  color: #e7d08e;
}
.time, .type{
  font-size: 22rpx;
  font-weight: 500;
  color: #c8c8c8;
}