/* pages/scenicSpotTickets/index.wxss */
page {
  min-height: 100vh;
  background: url("http://47.108.86.202:8081/icon/bj01.png") no-repeat;
  background-size: 100%;
  background-position-y: -47rpx;
} 
.listItem{
   margin: 30rpx;
   padding: 26rpx 20rpx;
   display: flex;
   justify-content: space-between;
   background: #ffffff;
  border-radius: 8rpx;
}
.listItem .list-img{
  position: relative;
}
.listItem .list-img image{
  width: 250rpx;
  height: 200rpx;
  border-radius: 8rpx;
}
.listItem .list-img .more{
 position: absolute;
 top: 0;
 transform: rotate(45deg);
 right: 0;
 color: #fcfcfc;
 font-size: 18rpx;
}
.listItem .list-rignt{
  display: flex;
  justify-content: space-around;
  flex-direction:column;
  margin-left: 30rpx;
}
.listItem .list-title{
  font-size: 26rpx;
  font-family: Source Han Serif CN, Source Han Serif CN-Medium;
  font-weight: 500;
  text-align: left;
  color: #1d1d1d;
}
.listItem .list-center{
  font-size: 22rpx;
  font-family: Source Han Serif CN, Source Han Serif CN-Medium;
  font-weight: 500;
  text-align: left;
  color: #999999;
  /* margin: 10rpx 0 30rpx 0; */
}
.listItem .list-more{
  display: flex;
  font-size: 20rpx;
  font-family: Source Han Serif CN, Source Han Serif CN-Medium;
  font-weight: 500;
  text-align: left;
  color: #646464;
  justify-content: space-between;
}