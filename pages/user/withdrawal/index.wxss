.topNum-box {
    margin: 30rpx;
    height: 240rpx;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
}

.topNum-box .background-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
}

.topNum-box .line-box {
    position: relative;
    z-index: 1;
    text-align: center;
}

.topNum-box .line-box .text {
    font-size: 24rpx;
    margin-bottom: 14rpx;
}

.topNum-box .line-box .num {
    color: #F4D6A4;
    font-size: 48rpx;
    margin-bottom: 36rpx;
}

.topNum-box .line-box .button {
    font-size: 24rpx;
}

.list-box {
    padding: 30rpx;
    margin-bottom: 256rpx;
}

.list-box .bigTitle {
    font-size: 32rpx;
    margin-bottom: 40rpx;
    display: flex;
    align-items: center;
    line-height: 44rpx;
}

.tabName {
    font-size: 28rpx;
    color: rgba(163, 163, 163, 1);
    margin-right: 40rpx;
}

.tabNameActive {
    font-size: 32rpx;
    color: rgba(2, 125, 88, 1);
    font-weight: 600;
    margin-right: 40rpx;
}

.list-box .ul .li {
    background-color: #fff;
    border-radius: 6rpx;
    margin-bottom: 24rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 40rpx;
    padding-right: 66rpx;
}

.list-box .ul .li .title {
    font-size: 28rpx;
    margin-bottom: 8rpx;
}

.list-box .ul .li .time {
    color: #B9B9B9;
    font-size: 26rpx;
}

.list-box .ul .li .num {
    color: #027D58;
    font-size: 28rpx;
}

.btn-box {
    position: fixed;
    bottom: 0;
    left: 0;
    width: calc(100% - 52rpx);
    height: 216rpx;
    background-color: #fff;
    box-shadow: 0 -6rpx 40rpx rgba(143, 143, 143, .16);
    border-radius: 50rpx 50rpx 0 0;
    padding: 36rpx 26rpx;
}

.btn-box .btn {
    background-color: #027D58;
    width: 100%;
    height: 98rpx;
    border-radius: 50rpx;
    color: #fff;
    font-size: 30rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.panel {
    background-color: #fff;
    border-radius: 6rpx;
    margin-bottom: 24rpx;
    padding: 40rpx;
}

.panel-head {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.panel-head .title {
    font-size: 28rpx;
    font-weight: 600;
    line-height: 1;
    color: rgba(33, 33, 33, 1);
}

.panel-head .price {
    font-size: 28rpx;
    line-height: 1;
    color: rgba(2, 125, 88, 1);
}

.panel-body {
    background: rgba(248, 248, 248, 1);
    border-radius: 10rpx;
    margin-top: 20rpx;
    padding-top: 20rpx;
}

.panel-body .line {
    padding: 0 26rpx 20rpx;
    display: flex;
    align-items: center;
}

.line-imgSize {
    width: 28rpx;
    height: 28rpx;
    margin-right: 8rpx;
}

.line-name {
    font-size: 26rpx;
    line-height: 36rpx;
    color: rgba(185, 185, 185, 1);
}