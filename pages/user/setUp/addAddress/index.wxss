/* pages/user/setUp/addAddress/index.wxss */
.addAddress{
    width: 100%;
    background: #fff;
    margin-bottom: 10rpx;
}
.addAddressList{
    width: 100%;
    padding:40rpx 20rpx;
    height: 120rpx;
    box-sizing: border-box;
    border-bottom: 1px solid #f5f5f5;
}
.addAddressListLeft{
    font-size: 30rpx;
    box-sizing: border-box;
    font-weight: 400;
}
.addAddressListLeftInput{
    text-align: right;
    font-size: 24rpx;
    border: none;
}
.addAddressListAddress{
    width: 100%;
    height: 120rpx;
    font-size: 28rpx;
}
.operatingBtnBox{
  height:216rpx;
  width: 100%;
  background:linear-gradient(180deg,rgba(255,255,255,1) 0%,rgba(255,255,255,1) 100%);
  box-shadow:0px -3px 20px rgba(143,143,143,0.16);
  position: fixed;
  bottom: 0rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  display: flex;
  justify-content: center;
}
.operatingBtn{
  width: 90%;
  font-size: 30rpx;
  height: 98rpx;
  color: #fff;
  background: #027D58;
  margin-top: 36rpx;
  line-height: 98rpx;
  text-align: center;
  border-radius:50rpx ;
  font-weight:600;
}
.wx-switch-input{
    width:100rpx !important;
    height:50rpx !important;
}
/*白色样式（false的样式）*/
.wx-switch-input::before{
    width:50rpx !important;
    height:46rpx !important;
}
/*绿色样式（true的样式）*/
.wx-switch-input::after{
    width: 50rpx !important;
    height: 46rpx !important;
}
.verifiedlistWebInput{
    text-align: right;
    font-size: 32rpx;
}
/* 地址弹窗 */
.citypicker{
    position: fixed;
    height: 100%;
    width: 100%;
    min-height: 100%;
 background: rgba(0, 0, 0, 0.3);
top: 0px;
z-index: 99;
  }
  
  .citybody {
    position: fixed;
    bottom: 0px;
    background: #fff;
  }
  
  .cityheader {
    position: absolute;
    top:0px;
    width: 100%;
    z-index: 4;
  }
  
  .city-cancel {
    float: left;
    margin: 20rpx;
    color: #818181;
  }
  
  .city-true {
    float: right;
    margin: 20rpx;
    color: #2FB42E
  }
  
  .section .picker {
    background-color: #fff;
    border-bottom: 1px #d9d9d9 solid;
    border-top: 1px #d9d9d9 solid;
    padding: 20rpx;
  }