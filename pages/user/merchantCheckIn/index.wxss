/* pages/user/merchantCheckIn/index.wxss */
.ckin-tit{
  height: 140rpx;
  padding-left: 24rpx;
  padding-right: 24rpx;
  font-size: 40rpx;
  color:#212121;
  line-height: 140rpx;
  background-color: #F4F4F4;
}
.required{
  font-size: 26rpx;
  color: #E44F4A;
}
.ckin-wrap{
  padding-left: 24rpx;
  padding-right: 24rpx;
  background-color: #fff;
}
.un-required,.place{
  color: #E6E6E6;
}
.ckin-item{
  display: flex;
  width: 100%;
  height: 128rpx;
  font-size: 30rpx;
  color:#2F2F2F;
  line-height: 128rpx;
  border-bottom: 1px solid #F6F6F6;
}
.ckin-label{
  width: 250rpx;
}
.ckin-input{
  width: calc(100% - 250rpx);
}
.ipt {
  width: 100%;
  height: 128rpx;
  font-size: 30rpx;
  line-height: 128rpx;
}
.tar .ipt{
  text-align: right;
}
.ckin-upload .ckin-label{
  width: 100%;
  height: 128rpx;
  font-size: 30rpx;
  color:#2F2F2F;
  line-height: 128rpx; 
}
.upload-wrap{
  position: relative;
  width: 100%;
  height:344rpx;
  background-color: #F4F4F4;
  border: 1rpx dashed #B9B9B9;
  border-radius: 8rpx;
}
.upload-wrap + .upload-wrap{
  margin-top: 66rpx;
}
.upload-wrap image +.up-tips{
  display: none;
}
.up-tips{
  position: absolute;
  top: 50%;
  left: 50%;
  transform:translate(-50%,-50%);
  text-align: center;
}
.up-tips image{
  width: 70rpx;
  height: 52rpx;
}
.tips-desc{
  font-size: 30rpx;
  color:#B9B9B9;
  line-height: 70rpx;
}
.footer{
  padding-top: 45rpx;
  width:100%;
  padding-bottom: 78rpx;
}
.operate-btn{
  width:100%!important;
  height: 86rpx;
  padding: 0;
  margin:0;
  font-weight: bold;
  font-size: 32rpx;
  color: #fff;
  line-height: 86rpx;
  text-align: center;
  background-color:#027D58;
  border-radius: 44rpx;
}
.hide{
  display: none;
}