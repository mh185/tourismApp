/* pages/user/memberCenter/index.wxss */
.white {
  background-color: #fff;
  min-height: 100vh;
  padding-top: 40rpx;
  box-sizing: border-box;
}

.header {
  position: relative;
  width: 690rpx;
  height: 240rpx;
  border-radius: 16rpx;
  margin: 0 auto;
  overflow: hidden;
  padding: 28rpx 30rpx;
  box-sizing: border-box;
}

.header .background-image{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}

.header .row-1 {
  display: flex;
  width: 100%;
  justify-content: space-between;
}

.header .row-1 .left {
  display: flex;
  align-items: center;
  z-index: 99;
}

.header .row-1 .left .level {
  font-size: 48rpx;
  font-family: PingFang SC;
  font-weight: bold;
  line-height: 64rpx;
  color: rgba(255, 255, 255, 1);
}

.header .row-1 .left .button {
  display: flex;
  justify-content: center;
  align-items: center;
  background: linear-gradient(90deg, rgba(246, 208, 168, 1) 0%, rgba(225, 179, 131, 1) 100%);
  margin-left: 14rpx;
  border-radius: 20rpx;
  color: #3C445D;
  font-size: 22rpx;
  font-weight: bold;
  font-family: PingFang SC;
  padding: 5rpx 10rpx;
}

.header .row-1 .right {
  font-size: 24rpx;
  font-family: PingFang SC;
  line-height: 32rpx;
  color: rgba(255, 255, 255, 1);
  opacity: 0.8;
  display: flex;
  align-items: center;
}

.header .row-2 {
  display: flex;
  width: 100%;
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 30rpx;
  color: rgba(255, 255, 255, 1);
  opacity: 0.8;
  margin-top: 24rpx;
}

.header .row-2 .exp {
  margin-right: 8rpx;
}
.header1{
  position: relative;
  margin: 30rpx;
  height: 240rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.header1 .background-image{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}
.header1 .integral-box{
  text-align: center;
  position: relative;
  z-index: 1;
}
.header1 .integral-box .text{
  color: #fff;
  font-size: 22rpx;
  margin-bottom: 20rpx;
}
.header1 .integral-box .num{
  color: #F4D6A4;
  font-size: 48rpx;
  font-weight: bold;
}
.section-1 .title {
  font-size: 34rpx;
  font-family: PingFang SC;
  line-height: 48rpx;
  color: rgba(33, 33, 33, 1);
  padding-left: 30rpx;
  margin-top: 24rpx;
  margin-bottom: 18rpx;
  box-sizing: border-box;
}

.section-1 .sub-title {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 30rpx;
  width: 220rpx;
  height: 56rpx;
  background: rgba(237, 196, 153, 1);
  font-size: 24rpx;
  font-family: PingFang SC;
  color: rgba(255, 255, 255, 1);
  border-radius: 24rpx;
  box-sizing: border-box;
}

.section-1 .sub-title:after {
  display: block;
  content: "";
  position: absolute;
  top: 50%;
  left: 220rpx;
  width: 500rpx;
  height: 2rpx;
  background-color: #EDC499;
}

.section-1 .list {
  display: flex;
  justify-content: space-between;
  padding: 0 30rpx;
  margin-top: 36rpx;
}

.section-1 .list-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 25%;
}

.section-1 .list-item .icon {
  width: 90rpx;
  height: 90rpx;
}

.section-1 .list-item .text {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 34rpx;
  color: rgba(33, 33, 33, 1);
  margin-top: 4rpx;
}

.section-1 .list-item .desc {
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 30rpx;
  color: rgba(185, 185, 185, 1);
  margin-top: 6rpx;
}

.section-2 {
  margin-top: 46rpx;
  padding: 0 30rpx;
}

.section-2 .title {
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 500;
  line-height: 42rpx;
  color: rgba(33, 33, 33, 1);
  margin-bottom: 26rpx;
}

.section-2 .row {
  margin-bottom: 24rpx;
}

.section-2 .row-title {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 38rpx;
  color: rgba(33, 33, 33, 1);
  margin-bottom: 10rpx;
}

.section-2 .row-desc {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 40rpx;
  color: rgba(154, 154, 154, 1);
}