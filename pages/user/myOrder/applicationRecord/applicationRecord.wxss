/* pages/user/myOrder/applicationRecord/applicationRecord.wxss */
.wrap{
  width: 100%;
  height: 100vh;
  background: #fff;
  padding: 30rpx 20rpx;
  box-sizing: border-box;
}
.item{
   border: 1px solid #f5f5f5;
   padding: 20rpx;
   box-shadow: 0 2px 12px 0 rgba(0,0,0,.1);
   border-radius: 5px;
}
.item_title{
  font-size: 30rpx;
  color: #222222;
  padding: 0rpx 0 20rpx 0;
  font-weight: 600;
}
.font_28{
  font-size: 28rpx;
}
.font_32{
  font-size: 32rpx;
}
.font_24{
  font-size: 24rpx;
}
.color_185{
  color: rgba(185, 185, 185, 1);
}
.red{
  color: red;
}

.item_crice{
  display: inline-block;
  width: 15rpx;
  height: 15rpx;
  border-radius: 50%;
  background-color: #027D58;
  margin-right: 10rpx;
}
.item_line{
  margin-top: 20rpx;
}
.item_tps{
  margin-top: 20rpx;
  padding: 20rpx 0;
  border-top: 1px solid #f5f5f5;
}
.bottom_box{
  border: 1px solid #f5f5f5;
  padding: 20rpx;
  box-shadow: 0 2px 12px 0 rgba(0,0,0,.1);
  border-radius: 20px;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  text-align: center;
}
.tpsBtn{
  /* height: 80rpx; */
  line-height: 80rpx;
  margin: 40rpx 20rpx;
  background-color:#027D58 ;
  color: #fff;
  border-radius: 36rpx;
}
