.row-box {
  display: flex;
}

.topNum-box {
  position: relative;
  width: 100%;
  height: 280rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.topNum-box .background-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}

.topNum-box .line-box {
  position: relative;
  z-index: 1;
}

.topNum-box .row-box {
  justify-content: center;
  align-items: flex-end;
  margin-bottom: 30rpx;
}

.topNum-box .num {
  color: #F4D6A4;
  font-size: 72rpx;
  line-height: 70rpx;
}

.topNum-box .day {
  color: #F4D6A4;
  font-size: 24rpx;
}

.topNum-box .text {
  color: #fff;
  font-size: 24rpx;
}

.toStore {
  background-color: #fff;
  padding: 12rpx 30rpx;
  display: flex;
  align-items: center;
}

.toStore .text {
  color: #9A9A9A;
  font-size: 24rpx;
}

.part-box {
  padding: 30rpx;
}

.part-box .title-line {
  display: flex;
  align-items: center;
}

.part-box .title-line .icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 8rpx;
}

.part-box .title-line .title {
  font-size: 32rpx;
}

.part-box .tips {
  color: #B9B9B9;
  font-size: 28rpx;
  margin-bottom: 14rpx;
}

.signIn-day {
  background-color: #FFF1CE;
  border-radius: 10rpx;
  width: calc((100% - 48rpx) / 7);
  height: 108rpx;
  position: relative;
  margin-right: 8rpx;
}

.signIn-day:last-child {
  margin-right: 0;
}

.signIn-day .background-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}

.signIn-day .line-box {
  z-index: 1;
  position: relative;
}
.signIn-day .row-box {
  justify-content: center;
  align-items: flex-end;
  margin-bottom: 14rpx;
  margin-top: 18rpx;
}
.signIn-day .num {
  font-size: 40rpx;
  line-height: 40rpx;
}

.signIn-day .day {
  font-size: 20rpx;
}

.signIn-day .text {
  color: #F8AA01;
  font-size: 20rpx;
  text-align: center;
}
.rule-box .ul{
  margin-top: 24rpx;
}
.rule-box .ul .title{
  font-size: 28rpx;
}
.rule-box .ul .content{
  color: #9A9A9A;
  font-size: 24rpx;
}