/* pages/index/guide/index.wxss */
Page {
  background-color: #fff;
}
.van-tab{
  width: 98rpx;
}
.head {
  display: flex;
  padding: 0 30rpx;
  align-items: center;
  overflow: scroll;
}
.active{
  display: inline-block;
  position: absolute;
  width: 28rpx;
  height: 4rpx;
  left: 50%;
  transform: translateX(-50%);
  bottom: -6rpx;
  background: linear-gradient(180deg,#f0d78d, #e1cc8f);
  border-radius: 2rpx;
}
.first {
  white-space: nowrap;
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  position: relative;
  /* border-bottom: 1px solid; */
}

.scroll_tab {
  display: flex;
  align-items: center;
  vertical-align: top;
  padding-left: 26rpx;
  overflow: scroll;
  height: 60rpx;
}
.scroll_tab view {
  position: relative;
  margin: 0 26rpx;
  white-space: nowrap;
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  display: inline-block;
}
.active_color{
  color: #552f09;
}
.content_box {
  overflow: scroll;
}
.content{
  padding: 30rpx 30rpx 0 30rpx;
}
.list_item{
  position: relative;
  margin-bottom: 30rpx;
}
.upper {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
}
.list_item_tag{
  width: 120rpx;
  height: 44rpx;
  background: linear-gradient(180deg,#f0d78f,#e1cc8f);
  border-radius: 8rpx 0 16rpx 0;
  text-align: center;
  line-height: 44rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #552f09;
}
.list_item_img{
  width: 100%;
  height: 260rpx;
  border-radius: 8rpx;
}
.active_color{
  color: #552f09;
}
.title_box {
  padding: 0 26rpx;
  margin-top: 134rpx;
}
.list_item_text{
  display: flex;
  justify-content: space-between;
}
.name{
  font-size: 26rpx;
  font-weight: 500;
  color: #FFFFFF;
}
.person_number{
  font-size: 28rpx;
  font-weight: 500;
  color: #FFFFFF;
}
.margin_two {
  margin: 2rpx;
}
.time, .type{
  font-size: 22rpx;
  font-weight: 500;
  color: #FFFFFF;
}
.loading{  
  padding: 10rpx;  
  font-size: 26rpx;
  color:#666;
  text-align: center;  
  margin-top: 30rpx;
}