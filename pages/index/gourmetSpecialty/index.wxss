/* pages/index/gourmetSpecialty/index.wxss */
page {
  min-height: 100vh;
  background: url("http://47.108.86.202:8081/icon/bj01.png") no-repeat;
  background-size: 100%;
  background-position-y: -47rpx;
}
.nav_left{
  font-size: 40rpx;
  color: #000000;
  font-weight: 500;
  font-family: Source Han Serif CN;

}
.nav_left .nav_left_text{
  margin-left:24rpx;
}
.attractions {
  background: #fff;
  padding: 0 30rpx;
}
.head_box {
  width: 100%;
  overflow: scroll;
  height: 90rpx;
}
.head {
  display: flex;
  /* padding: 0 30rpx; */
  align-items: center;
}
.active{
  display: inline-block;
  position: absolute;
  width: 28rpx;
  height: 4rpx;
  left: 50%;
  transform: translateX(-50%);
  bottom: -6rpx;
  background: linear-gradient(180deg,#f0d78d, #e1cc8f);
  border-radius: 2rpx;
}
.first {
  white-space: nowrap;
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  position: relative;
  /* border-bottom: 1px solid; */
}

.scroll_tab {
  display: flex;
  align-items: center;
  vertical-align: top;
  padding-left: 26rpx;
  overflow: scroll;
  height: 60rpx;
}
.scroll_tab view {
  position: relative;
  margin: 0 26rpx;
  white-space: nowrap;
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  display: inline-block;
}
.active_color{
  color: #552f09;
}
.content{
  height: 408rpx;
  /* border-radius: 8rpx; */
  /* box-shadow: 0px 4rpx 8rpx 0px rgba(145,145,145,0.1);  */
  /* margin-bottom: 24rpx; */
}
.one {
  margin-bottom: 40rpx !important;
  border-radius: 8rpx;
  box-shadow: 0px 4rpx 8rpx 0px rgba(145,145,145,0.1); 
  margin-bottom: 24rpx;
  height: 395rpx;
}
.one image {
  width: 100%;
  height: 260rpx;
  border-radius: 8rpx;
}
.one_box {
  margin: 26rpx 26rpx 0 34rpx;
}
.title {
  font-size: 26rpx;
  font-family: Source Han Serif CN, Source Han Serif CN-Medium;
  font-weight: 500;
  color: #1d1d1d;
  margin-top: 16rpx;
}
.title_button {
  margin-top: 4rpx;
  display: flex;
  justify-content: space-between;
}
.button_left {
  display: flex;
  align-items: center;
}
.button_see {
  font-size: 20rpx;
  color: #676767;
}
.button_see image {
  width: 24rpx;
  height: 16rpx;
  margin-right: 6rpx;
}
.button_share {
  font-size: 20rpx;
  color: #676767;
  margin-left: 20rpx;
}
.button_share image {
  width: 24rpx;
  height: 24rpx;
  margin-right: 4rpx;
}
.button_right {
  font-size: 18rpx;
  color: #ff5555;
}
.button_right text {
  font-size: 28rpx;
  margin-left: 6rpx;
  color: #ff5555;
}