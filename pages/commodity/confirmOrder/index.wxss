.allShopBoxTit {
    padding: 20rpx;
    border-bottom: 1px solid #e6e6e6;
    box-sizing: border-box;
    position: relative;
    font-size: 30rpx;
    color: #333333;
}

.allShopBoxProduct {
    width: 100%;
    padding: 40rpx 20rpx;
    box-sizing: border-box;
}

.allShopBoxProductList {
    width: 100%;
}

.allShopBoxProductListImg {
    width: 160rpx;
    height: 160rpx;
}

.allShopBoxProductListRight {
    width: calc(100% - 180rpx);
    margin-left: 20rpx;
    padding: 20rpx 0;
    box-sizing: border-box;
}

.allShopBoxProductListName {
    font-size: 24rpx;
    font-weight: 600;
    color: #2A2A2A;
    margin-bottom: 20rpx;
}

.allShopBoxProductListSpecification text {
    font-size: 24rpx;
    font-weight: 600;
    color: #919191;
    background: rgba(244, 244, 244, 1);
    opacity: 1;
    border-radius: 6rpx;
    display: inline-block;
    padding: 5rpx;
    box-sizing: border-box;
}

.allShopBoxProductListMoney {
    width: 100%;
    margin-top: 40rpx;
}

.allShopBoxProductListMoney .money {
    font-size: 30rpx;
    font-weight: 600;
    color: #027D58;
}

.specificaShopNuminput {
    background: #fff;
}

.plus,
.less {
    display: block;
    width: 60rpx;
    height: 60rpx;
    background: rgba(242, 243, 245, 1);
    line-height: 60rpx;
    font-size: 32rpx;
    text-align: center;
}

.numebr {
    display: block;
    width: 60rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    font-size: 28rpx;
    border: 1px solid rgba(237, 237, 237, 1);
    box-sizing: border-box;
}

.allShopBoxInfor {
    width: 100%;
    padding: 0 20rpx;
    background: #fff;
    box-sizing: border-box;
}

.allShopBoxInforList {
    border-top: 1px solid rgba(245, 245, 245, 1);
    padding: 30rpx 20rpx;
    box-sizing: border-box;
}

.RemarksTit {
    font-size: 28rpx;
    color: #000;
    line-height: 50rpx;
}

.Remarks {
    text-align: right;
    font-size: 28rpx;
    color: rgba(145, 145, 145, 1);
}

.RemarksInput {
    text-align: right;
    font-size: 28rpx;
    color: rgba(145, 145, 145, 1);
    line-height: 50rpx;
}

.payBox {
    position: fixed;
    bottom: 0px;
    left: 0px;
    width: 100%;
    padding: 20rpx 20rpx;
    box-sizing: border-box;
    z-index: 90;
    background: linear-gradient(180deg, rgba(255, 255, 255, 1) 0%, rgba(255, 255, 255, 1) 100%);
    box-shadow: 0px -6rpx 40rpx rgba(143, 143, 143, 0.16);
    border-top-left-radius: 30rpx;
    border-top-right-radius: 30rpx;
}

.payBoxMoney {
    font-size: 32rpx;
    color: rgba(185, 185, 185, 1);
    line-height: 80rpx;
}

.payBoxMoney text {
    color: #212121;
    font-size: 36rpx;
    font-weight: 600;
}

.payBoxBtn {
    background: rgba(2, 125, 88, 1);
    text-align: center;
    border-radius: 100rpx;
    padding: 15rpx 40rpx;
    font-size: 30rpx;
    color: rgba(255, 255, 255, 1);
    margin-top: 10rpx;
}

.setAddress {
    text-align: center;
    font-size: 28rpx;
    color: rgba(185, 185, 185, 1);
}

.shopIcon {
    width: 26rpx;
    height: 26rpx;
    margin-top: 7rpx;
    margin-right: 10rpx;
}

.right {
    width: 20rpx;
    height: 20rpx;
    position: absolute;
    right: 20rpx;
    top: 30rpx;
}

.popup {
    position: fixed;
    top: 0px;
    left: 0px;
    width: 100%;
    height: 100%;
    z-index: 9999;
    background: rgba(0, 0, 0, 0.5);
}

.popupCenter {
    width: 600rpx;
    background: #fff;
    border-radius: 15rpx;
    position: fixed;
    left: 50%;
    margin-left: -300rpx;
    top: 50%;
    height: 300rpx;
    margin-top: -150rpx;
}

.popupCenterTit {
    font-size: 28rpx;
    text-align: center;
    line-height: 80rpx;
    border-bottom: 1px solid rgba(245, 245, 245, 1);
}

.popupCenterWeb {
    padding: 20rpx;
    border-bottom: 1px solid rgba(245, 245, 245, 1);
    box-sizing: border-box;
}

.popupCenterBtn {
    width: 100%;
}

.popupCenterBtnLeft {
    width: 50%;
    border-right: 1px solid rgba(245, 245, 245, 1);
    box-sizing: border-box;
    text-align: center;
    line-height: 80rpx;
    font-size: 28rpx;
    color: #8a8a8a;
}

.popupCenterBtnRight {
    width: 50%;
    box-sizing: border-box;
    text-align: center;
    line-height: 80rpx;
    font-size: 28rpx;
    color: #027D58;
}

.cardIcon {
    width: 20rpx;
    height: 20rpx;
    line-height: 25rpx;
}

.activitiesMan {
    display: flex;
    width: 32rpx;
    height: 32rpx;
    margin-right: 10rpx;
    margin-left: 30rpx;
}

.flex_c {
    display: flex;
    align-items: center;
}

.flex_c_c {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.flex_1 {
    flex: 1;
}

.cardBtn {
    border: 1px solid #fff;
    border-radius: 10px;
    line-height: 35rpx;
}

.specificaPopupcBox {
    width: 100%;
    /* height: 70vh; */
    position: fixed;
    bottom: 0px;
    left: 0px;
    z-index: 101;
    background: #fff;
    padding: 40rpx 0rpx 140rpx;
    box-sizing: border-box;
}

.specificaPopupcBoxBtn {
    position: absolute;
    bottom: 20rpx;
    left: 5%;
    padding: 30rpx 0;
    text-align: center;
    width: 90%;
    background: rgba(2, 125, 88, 1);
    border-radius: 50rpx;
    font-size: 30rpx;
    color: #fff;
}