    font-size: 32rpx;
    color: #2c2c2c;
    font-weight: 600;
}

.userInforName .tel {
    margin-left: 20rpx;
}

.userInforAddress {
    font-size: 32rpx;
    color: #8a8a8a;
    margin-top: 10rpx;
}

.userInforRight {
    position: absolute;
    width: 40rpx;
    height: 40rpx;
    right: 20rpx;
    top: 50rpx;
}

.allShop {
    width: 100%;
    padding-bottom: 140rpx;
}

.allShopBox {
    width: 100%;
    background: #fff;
    margin-bottom: 20rpx;
}


