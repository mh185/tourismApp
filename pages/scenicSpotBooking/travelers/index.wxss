}
.bottom_box {
  position: absolute;
  bottom: 50rpx;
  left: 50%;
  transform: translateX(-50%);
}
.bottom_title {
  height: 80rpx;
  border-radius: 40rpx;
  box-shadow: 0px -20rpx 40rpx 0px rgba(184,184,184,0.1);
