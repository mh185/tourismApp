  color: #c8c8c8;
}
.middle {
  margin: 44rpx 0 0 64rpx;
}
.van-checkbox__label {
  font-size: 24rpx;
  font-family: Source Han Serif CN, Source Han Serif CN-Medium;
  font-weight: 500;
  text-align: left;
  color: #878787;
}
.bottom_box {
  position: absolute;
  bottom: 92rpx;
  left: 50%;
  transform: translateX(-50%);
}
.bottom_left {
  height: 80rpx;
  border-radius: 40rpx;
  box-shadow: 0px -20rpx 40rpx 0px rgba(184,184,184,0.1);
  width: 560rpx;
  background: linear-gradient(180deg,#f0d78d, #e1cc8f);
  font-size: 28rpx;
  font-family: Source Han Serif CN, Source Han Serif CN-Medium;
  font-weight: 500;
  line-height: 80rpx;
  text-align: center;
  color: #ffffff;
