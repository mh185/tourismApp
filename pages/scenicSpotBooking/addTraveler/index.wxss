page {
  min-height: 100vh;
  background: url("http://47.108.86.202:8081/icon/bj01.png") no-repeat;
  background-size: 100%;
  background-position-y: -47rpx;
}
.nav_left{
  font-size: 40rpx;
  color: #000000;
  font-weight: 500;
  font-family: Source Han Serif CN;

}
.nav_left .nav_left_text{
  margin-left:24rpx;
}
.top_padding {
  padding-top: 20rpx;
}
.top {
  display: flex;
  align-items: center;
  padding: 0 94rpx 0 82rpx;
  height: 368rpx;
  background: #ffffff;
  box-shadow: 0px 10rpx 20rpx 0px rgba(130,130,130,0.16); 
