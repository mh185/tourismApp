page{
  min-height: 100vh;
  background: url("http://47.108.86.202:8081/icon/bj01.png") no-repeat;
  background-size: 100%;
  background-position-y: -47rpx;
}
.nav_left{
  font-size: 40rpx;
  color: #000000;
  font-weight: 500;
  font-family: Source Han Serif CN;

}
.nav_left .nav_left_text{
  margin-left:24rpx;
}
/* 列表 */
.listBox {
  background: #FFFFFF;
  padding: 90rpx 30rpx 0 30rpx;
}
.reco-item{
  position: relative;
  margin-bottom: 66rpx;
  display: flex;
  justify-content: flex-start;
}
.reco-item-left {
  display: flex;
  justify-content: flex-start;
}
.reco-item-left image{
  height: 200rpx;
  width: 240rpx;
  border-radius: 8rpx;
}
.left_box {
  margin-left: 40rpx;
} 
.left_box_One {
  font-size: 28rpx;
  text-align: left;
  color: #1d1d1d;
  margin-bottom: 6rpx;
  width: 400rpx;
}
.left_box_Two {
  font-size: 22rpx;
  font-family: Source Han Serif CN, Source Han Serif CN-Medium;
  font-weight: 500;
  text-align: left;
  color: #c8c8c8;
  margin-bottom: 26rpx;
}
.left_box_Three {
  font-size: 28rpx;
  font-family: Source Han Serif CN, Source Han Serif CN-Medium;
  font-weight: 500;
  color: #e7d08e;
}
.left_box_Four {
  font-size: 22rpx;
  font-family: Source Han Serif CN, Source Han Serif CN-Medium;
  font-weight: 500;
  color: #c8c8c8;
}
.button {
  /* position: absolute; */
  /* right: 0; */
  /* bottom: 0; */
  width: 140rpx;
  height: 50rpx;
  background: linear-gradient(180deg,#f0d78d, #e1cc8f);
  box-shadow: 0px -20rpx 40rpx 0px rgba(184,184,184,0.1); 
  font-size: 24rpx;
  font-family: Source Han Serif CN, Source Han Serif CN-Medium;
  font-weight: 500;
  line-height: 50rpx;
  text-align: center;
  color: #ffffff;
  border-radius: 26rpx;
}
.rm-title{
  font-size: 26rpx;
font-family: Source Han Serif CN, Source Han Serif CN-Medium;
font-weight: 500;
text-align: left;
color: #1d1d1d;
line-height: 18px;
}
.rm-ren{
  font-size: 28rpx;
font-family: Source Han Serif CN, Source Han Serif CN-Medium;
font-weight: 500;
text-align: right;
color: #e7d08e;
}
.rm-time{
  font-size:22rpx;
font-family: Source Han Serif CN, Source Han Serif CN-Medium;
font-weight: 500;
text-align: left;
color: #c8c8c8;
}
.rm-text{
  font-size: 11px;
font-family: Source Han Serif CN, Source Han Serif CN-Medium;
font-weight: 500;
text-align: right;
color: #c8c8c8;
}
.aaaa{
  position: absolute;
  left: 0;
  top: 0;
  background: url("http://47.108.86.202:8081/icon/item-3.png") no-repeat;
  background-size: 100%;
  width: 90rpx;
  height: 44rpx;
  text-align: center;
  line-height: 44rpx;
  color: #552f09;
  font-size: 28rpx;
}
.strategy {
  margin-bottom: 66rpx;
}
.strategy-img image{
  width: 260rpx;
  height: 200rpx;
  border-radius: 8rpx;
}
.strategy-title{
  font-size: 28rpx;
  font-weight: 800;
  text-align: left;
  color: #1d1d1d;
}
.strategy-name{
  font-size: 24rpx;
  font-weight: 500;
  text-align: left;
  color: #262323;
  line-height: 60rpx;
  /* margin-bottom:14rpx ;
  margin-top: 10rpx; */
  overflow: hidden;
}
.strategy-more{
  font-size: 20rpx;
  font-weight: 500;
  /* text-align: right; */
  color: #676767;
}
.strategy text{
  margin-right: 40rpx;
  margin-left: 10rpx;
}
.name-img{
  float: left;
}
.line-right{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin-left: 40rpx;
}
.right-item {
width: 100%;
}
.strategy-tiem{
  display: flex;
  justify-content: start;
}
.left_box_button {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  margin-top: 26rpx;
}
.rich_box{
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;  
}