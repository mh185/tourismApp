}
.calendar {
  --calendar-height: 1100rpx;
}
.van-calendar__month-title {
  text-align: left !important;
  font-size: var(--calendar-month-title-font-size,13px) !important;
}
.van-calendar__day {
  font-size: var(--calendar-day-font-size,12px) !important;
}
