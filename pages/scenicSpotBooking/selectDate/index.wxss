page {
  min-height: 100vh;
  background: url("http://47.108.86.202:8081/icon/bj01.png") no-repeat;
  background-size: 100%;
  background-position-y: -47rpx;
}
.nav_left{
  font-size: 40rpx;
  color: #000000;
  font-weight: 500;
  font-family: Source Han Serif CN;

}
.van-button--block {
  width: 100% !important;
}
.nav_left .nav_left_text{
  margin-left:24rpx;
}
.box {
  margin-top: 22rpx;
  padding: 22rpx 30rpx 0 30rpx;
