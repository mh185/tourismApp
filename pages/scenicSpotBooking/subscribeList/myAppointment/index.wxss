/* pages/scenicSpotBooking/subscribeList/myAppointment/index.wxss */
page {
  min-height: 100vh;
  background: url("http://47.108.86.202:8081/icon/bj01.png") no-repeat;
  background-size: 100%;
  background-position-y: -47rpx;
}
.nav_left{
  font-size: 40rpx;
  color: #000000;
  font-weight: 500;
  font-family: Source Han Serif CN;

}
.nav_left .nav_left_text{
  margin-left:24rpx;
}
.box {
  padding: 50rpx 30rpx 0 30rpx;
}
.upper {
  display: flex;
  align-items: center;
  height: 280rpx;
  background: #ffffff;
  border-radius: 8rpx;
}
.upper_list_lefe {
  width: 6rpx;
  height: 160rpx;
  border-radius: 0px 8rpx 8rpx 0px;
}
.upper_list_trademark {
  width: 240rpx;
  height: 200rpx;
  margin-left: 32rpx;
  /* background: red; */
  border-radius: 8rpx;
}
.upper_list_right {
  margin-left: 40rpx;
}
.upper_list_right .right_upper {
  font-size: 28rpx;
  font-family: Source Han Serif CN, Source Han Serif CN-Medium;
  font-weight: 500;
  text-align: left;
  color: #1d1d1d;
}
.upper_list_right .right_lower {
  font-size: 22rpx;
  font-family: Source Han Serif CN, Source Han Serif CN-Medium;
  font-weight: 500;
  text-align: left;
  color: #c8c8c8;
  margin-top: 6rpx;
}
.stateName_red{
  color: #FF6B6B !important;
}
.stateName_yellow{
  color: #E1CC8E !important;
}
.stateName_ash{
  color: #C8C8C8 !important;
}
.upper_list_right .right_lower image {
  width: 26rpx;
  height: 26rpx;
}
.middle {
  display: flex;
  align-items: center;
  height: 160rpx;
  background: #ffffff;
  border-radius: 8rpx;
  margin-top: 20rpx;
}
.middle_list_lefe {
  width: 6rpx;
  height: 72rpx;
}
.middle_list_right {
  margin-left: 34rpx;
  width: 90%;
}
.middle_list_right .right_upper {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.middle_list_right .right_upper_left {
  font-size: 32rpx;
  font-family: Source Han Serif CN, Source Han Serif CN-Medium;
  font-weight: 500;
  color: #1d1d1d;
}
.middle_list_right .right_upper_right {
  font-size: 24rpx;
  font-family: Source Han Serif CN, Source Han Serif CN-Medium;
  font-weight: 500;
  color: #1d1d1d;
  /* margin-left: 376rpx; */
}
.middle_list_right .right_lower {
  font-size: 26rpx;
  font-family: Source Han Serif CN, Source Han Serif CN-Medium;
  font-weight: 500;
  text-align: left;
  color: #1d1d1d;
  letter-spacing: 0px;
}
.bottom_box {
  position: absolute;
  bottom: 92rpx;
  left: 50%;
  transform: translateX(-50%);
}
.bottom_title {
  height: 80rpx;
  border-radius: 40rpx;
  box-shadow: 0px -20rpx 40rpx 0px rgba(184,184,184,0.1);
  width: 560rpx;
  background: linear-gradient(180deg,#ff8080, #ff6969);
  font-size: 28rpx;
  font-family: Source Han Serif CN, Source Han Serif CN-Medium;
  font-weight: 500;
  line-height: 80rpx;
  text-align: center;
  color: #ffffff;
}
.bottom_box_confirmAdmission {
  position: absolute;
  bottom: 200rpx;
  left: 50%;
  transform: translateX(-50%);
}
.bottom_title_confirmAdmission {
  height: 80rpx;
  border-radius: 40rpx;
  box-shadow: 0px -20rpx 40rpx 0px rgba(184,184,184,0.1);
  width: 560rpx;
  background: linear-gradient(180deg,#f0d78d, #e1cc8f);
  font-size: 28rpx;
  font-family: Source Han Serif CN, Source Han Serif CN-Medium;
  font-weight: 500;
  line-height: 80rpx;
  text-align: center;
  color: #ffffff;
}