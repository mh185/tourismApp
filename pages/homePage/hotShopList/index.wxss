/* pages/homePage/hotShopList/index.wxss */

.shopList {
    width: 100%;
    min-height: 100vh;
    padding: 0 20rpx;
    background: #fff;
    box-sizing: border-box;
}

.businessRank {
    width: 100%;
    padding: 20rpx 0;
}

.businistessRankList {
    width: 25%;
    font-size: 28rpx;
    color: #2c2c2c;
    line-height: 50rpx;
    padding-left: 40rpx;
    box-sizing: border-box;
}

.businistessRankListImg {
    width: 30rpx;
    height: 30rpx;
    margin-left: 5rpx;
    margin-top: 10rpx;
}

.content {
    /* display: flex;
    flex-direction: row;
    overflow: hidden; */
    padding: 20rpx 0;
    /* column-count:2;
    column-gap:20rpx; */
    width: 100%;
    background: #fff;
    box-sizing: border-box;
}

.clonum-one {
    display: inline-block
}

.clonum-tow {
    display: inline-block;
}

.flex {
    display: flex;
    justify-content: space-between;
}

.dislocationGrad {
    column-count: 2;
    column-gap: 20rpx;
    column-fill: auto;
}

.contentList {
    /* break-inside: avoid; */
    box-sizing: border-box;
    width: 340rpx;
    border: 1px solid #f5f5f5;
    margin-bottom: 20rpx;
    border-radius: 20rpx;
    overflow: hidden;
}

.contentListShopListImg {
    width: 100%;
}

.list-img {
    width: 330rpx;
    height: 450rpx;
    border-radius: 5px;
    position: relative;
}

.list-img2 {
    width: 330rpx;
    height: 550rpx;
    border-radius: 5px;
    position: relative;
}

.contentListShopName {
    padding: 20rpx 10rpx;
    width: 100%;
    box-sizing: border-box;
    font-size: 28rpx;
    color: #2c2c2c;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.contentListShopNumber {
    padding: 10rpx 10rpx 20rpx;
    width: 100%;
    box-sizing: border-box;
    font-size: 28rpx;
    color: #2c2c2c;
}

.contentListShopNumber text {
    font-size: 24rpx;
    color: #dbdbdb;
}