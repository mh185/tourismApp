/* pages/homePage/recomBusiness/index.wxss */
.recomBusiness{
    width: 100%;
    min-height: 100vh;
    background: #fff;
}
.businessRank{
    width: 100%;
    padding: 20rpx 0;
}
.businistessRankList{
    width: 25%;
font-size: 28rpx;
color: #2c2c2c;
line-height: 50rpx;
padding-left:40rpx;
box-sizing: border-box;
}
.businistessRankListImg{
    width: 30rpx;
    height: 30rpx;
    margin-left:5rpx;
    margin-top: 10rpx;
}

.businessBox{
    width: 100%;
    margin-top: 20rpx;
    padding: 20rpx;
    box-sizing: border-box;
}
.businessBoxList{
    width: 100%;
    padding: 20rpx;
    background:rgba(255,255,255,1);
    border:1px solid rgba(232,232,232,1);
    border-radius: 10rpx;
    box-sizing: border-box;
    margin-bottom: 20rpx;
}
.businessBoxListInforImg{
    width: 80rpx;
    height: 80rpx;
}
.businessBoxListInforBox{
    margin-left: 20rpx;
}
.businessBoxListInforBoxName{
    font-size: 32rpx;
    color: #bfbfbf;
}
.businessBoxListInforBoxXin{
    margin-top: 10rpx;
}
.businessBoxListInforBoxXinImg{
width:20rpx;
height:20rpx;
margin-right:5rpx;
}
.businessBoxBtn{
    padding: 10rpx 30rpx;
    border-radius: 50rpx;
    background: #027D58;
    font-size: 28rpx;
    color: #FFFFFF;
    margin-top: 10rpx;
}
.businessBoxListShop{
    width: 100%;
    margin-top: 20rpx;
   
}
.businessBoxListShopList{
    width:210rpx;
    height: 340rpx;
    background: #fff;
    border-radius: 10rpx;
    margin-right: 18rpx;
}
.businessBoxListShopList:last-child{
    margin-right: 0rpx;
}
.businessBoxListShopListTu{
    width: 210rpx;
    height: 272rpx;
}
.businessBoxListShopListImg{
    width: 210rpx;
    height: 272rpx;
}
.businessBoxListShopListName{
    margin-top: 10rpx;
    font-size: 28rpx;
    color:rgba(49,49,49,1);
    overflow: hidden;white-space: nowrap;text-overflow: ellipsis;
    padding: 0 10rpx;
    font-weight:600;
}