/* pages/homePage/search/index.wxss */

.box {
    width: 100%;
    min-height: 100vh;
    background: #fff;
}

.search {
    width: 100%;
    padding: 20rpx 40rpx;
    box-sizing: border-box;
    position: relative;
}

.searchInput {
    width: 100%;
    height: 60rpx;
    border-radius: 50rpx;
    background: rgba(244, 244, 244, 1);
    color: rgba(197, 197, 197, 1);
    font-size: 24rpx;
    padding: 10rpx 26rpx;
    box-sizing: border-box;
}

.searchBtn {
    width: 100rpx;
    height: 60rpx;
    text-align: center;
    position: absolute;
    top: 20rpx;
    right: 40rpx;
    line-height: 70rpx;
    z-index: 99;
}

.searchBtnImg {
    width: 35rpx;
    height: 35rpx;
}

.hotSearch {
    width: 100%;
    padding: 0 20rpx;
    margin-top: 40rpx;
    box-sizing: border-box;
}

.hotSearchTxt {
    width: 100%;
    color: rgba(33, 33, 33, 1);
    font-family: PingFang SC;
    font-size: 36rpx;
    margin-bottom: 20rpx;
}

.hotSearchbox {
    width: 100%;
}

.hotSearchboxList {
    background: rgba(255, 255, 255, 1);
    border: 1px solid rgba(239, 239, 239, 1);
    opacity: 1;
    border-radius: 60rpx;
    color: rgba(112, 112, 112, 1);
    font-size: 24rpx;
    padding: 10rpx 30rpx;
    box-sizing: border-box;
    display: inline-block;
    margin-right: 10rpx;
    margin-bottom: 20rpx;
}

.historySearch {
    margin-top: 60rpx;
    width: 100%;
    padding: 0 20rpx;
    box-sizing: border-box;
}

.historySearchTit {
    width: 100%;
    color: rgba(33, 33, 33, 1);
    font-family: PingFang SC;
    font-size: 36rpx;
    margin-bottom: 30rpx;
}

.historyDetele {
    background: rgba(255, 255, 255, 1);
    border: 1px solid rgba(239, 239, 239, 1);
    opacity: 1;
    border-radius: 24rpx;
    font-size: 24rpx;
    color: rgba(112, 112, 112, 1);
    border-radius: 50rpx;
    padding: 10rpx 30rpx;
    box-sizing: border-box;
}

.historySearchBoxList {
    color: rgba(33, 33, 33, 0.75);
    font-size: 30rpx;
    margin-right: 30rpx;
    margin-bottom: 20rpx;
}

.content {
    padding: 20rpx;
    /* column-count:2; */
    /* column-gap:20rpx; */
    width: 100%;
    background: #fff;
    box-sizing: border-box;
}

.contentList {
    break-inside: avoid;
    box-sizing: border-box;
    width: 100%;
    border: 1px solid #f5f5f5;
    margin-bottom: 20rpx;
    border-radius: 20rpx;
}

.contentListShopListImg {
    width: 100%;
}

.contentListShopName {
    padding: 20rpx 10rpx;
    width: 100%;
    box-sizing: border-box;
    font-size: 28rpx;
    color: #2c2c2c;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.contentListShopNumber {
    padding: 10rpx 10rpx 20rpx;
    width: 100%;
    box-sizing: border-box;
    font-size: 28rpx;
    color: #2c2c2c;
}

.contentListShopNumber text {
    font-size: 24rpx;
    color: #dbdbdb;
}