<!-- pages/hotel/reservationSuccessful/index.wxml -->
<view>
  <view class="top" bindtap="back">
    <view class="hotelTop">
      <van-icon class="hotelTopLeft" name="arrow-left" />
      <text class="head_title">预定成功</text>
    </view>
  </view>
  <view class="box">
    <image src="../../../images/hotel/paymentSuccessful.png"></image>
    <text class="one">支付成功</text>
    <text class="two">{{money}}</text>
    <text class="three">付款方式：<text>{{paymentMethod}}</text></text>
    <text class="four">付款时间：<text>{{paymentTime}}</text></text>
    <view class="five" bindtap="toIndex">
      <view>返回首页</view>
    </view>
    <view class="six" bindtap="">
      <view class="food_button">查看订单</view>
    </view>
  </view>
</view>