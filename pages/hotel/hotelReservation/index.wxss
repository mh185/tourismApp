}
.text_center{
  /* font-size: 18px; */

}
.day{
  font-size: 9px;
}
.star_price{
  color: #5e5e5e;
  font-size: 14px;
}

.food_button{
  background: linear-gradient(181deg,#80ff8e 0%, #35d9ba 99%);
  box-shadow: 0px -10px 20px 0px rgba(184,184,184,0.1); 
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  border-radius: 50rpx;
  margin: 20px auto;
}