  justify-content: space-between;
  align-items: center;
}
.location_city{
  height: 100rpx;
  width: 80%;
  display: inline-flex;
  justify-content: space-between;
  align-items: center;
}
.location_positioning{
  display: inline-flex;
  flex-direction: column;
  justify-content: center;

}
.location_img{
  width: 30rpx;
  height: 30rpx;
  margin: 0 auto;
}
.location_text{
  display: block;
