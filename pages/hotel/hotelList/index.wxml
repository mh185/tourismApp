          <image class="stars" src="../../../images/hotel/yellow_stars.png" />
          <image class="stars" src="../../../images/hotel/ash_stars.png" />
        </view>
        <text class="hotelAddress">{{hotelAddress}}</text>
        <text class="money_box"><text>￥</text><text class="money">{{money}}</text><text>起</text></text>
      </view>
      <view class="distance_box">
      <view class="distance">
        <image class="distanceIcon" src="../../../images/hotel/distance.png" />
        <text class="distance_text">{{distance}}</text>
      </view>
      </view>
    </view>
