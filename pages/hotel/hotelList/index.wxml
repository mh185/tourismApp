<!-- pages/hotel/hotelList/index.wxml -->
<view>
  <view class="top">
    <view class="hotelTop" bindtap="tohotelReservation">
      <van-icon class="hotelTopLeft" name="arrow-left" />
      <text class="head_title">酒店</text>
    </view>
  </view>
  <!-- 搜索 -->
  <van-search class="search" value="{{value}}" placeholder="搜索关键词/位置/酒店名" />
  <view class="threeColumns">
    <view class="threeColumnsList">
      <text class="">价格</text>
      <van-icon class="threeColumnsDown" name="arrow-down" color="#000000" />
    </view>
    <view class="threeColumnsList">
      <text class="">星级</text>
      <van-icon class="threeColumnsDown" name="arrow-down" color="#000000" />
    </view>
    <view class="threeColumnsList">
      <text class="">位置</text>
      <van-icon class="threeColumnsDown" name="arrow-down" color="#000000" />
    </view>
  </view>
  <!-- 酒店列表 -->
  <view class="fourColumns">
    <view class="fourColumnsList">
      <image class="fourColumnsList_image" src="../../../images/hotel/hotelList.png" />
      <view>
        <text class="hotelName" bindtap="toHotelDetails">{{hotelName}}</text>
        <view>
